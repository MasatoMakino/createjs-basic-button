{
  "name": "createjs-basic-button",
  "version": "0.9.3",
  "description": "Basic button library for CreateJS.",
  "main": "./bin/BasicButton.js",
  "types": "./bin/BasicButton.d.ts",
  "repository": "https://MasatoMakino@github.com/MasatoMakino/createjs-basic-button.git",
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "createjs-cache-util": "https://github.com/MasatoMakino/createjs-cache-util.git"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@types/easeljs": "^1.0.0",
    "@types/jest": "^24.0.15",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "replace-in-file": "^4.1.1",
    "ts-jest": "^24.0.2",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.3",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6"
  },
  "scripts": {
    "test": "jest --coverage",
    "build": "npm run prettier:src && tsc && npm run babel",
    "prettier:src": "prettier --write './!(bin|docs|coverage)/**/*.{js,ts,json}' ",
    "babel": "webpack --mode development --module-bind js=babel-loader ./docs/demo/main.js --output ./docs/demo/bundle.js",
    "watch:server": "node task/browsersync.js development",
    "server": "node task/browsersync.js production",
    "doc": "npm run doc:generate && npm run doc:replaceNode && npm run doc:card",
    "doc:generate": "typedoc --tsconfig tsdocconfig.json src",
    "doc:replaceNode": "node ./task/replaceAPI.js",
    "doc:card": "repoimg -n MasatoMakino/createjs-basic-button -o ./docs/card.png"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  }
}
